package com.snion.controller;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Date;
import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.portlet.ModelAndView;

import com.snion.entity.Item;

@Controller
public class ItemController {

	@RequestMapping("itemlist")
	public ModelAndView itemList() {
		ModelAndView mv = new ModelAndView();
		
		List<Item> list = new ArrayList<>();
		list.add(new Item(1, "冰箱", 1999, new Date(), "冰箱质量好"));
		
				Arrays.asList(new Item(1, "冰箱", 1999, new Date(), "冰箱质量好"), new Item(2, "冰箱2", 1999, new Date(), "冰箱质量好2"), 
				new Item(3, "冰箱3", 1999, new Date(), "冰箱质量好3"), new Item(4, "冰箱4", 1999, new Date(), "冰箱很热"));
		mv.addObject("itemlist", list);
		mv.setViewName("jsp/ListItem.jsp");
	}
		
}
