<body>
	<div class="box">
		<div class="title">
			<h1>Login</h1>
		
			<form action="/SSM/jsp/stuquery.jsp" method="post" >

				<input class="iput" type="text" id="id" name="id" placeholder="ID" autocomplete="off"><span class="tips"></span> <br>

				<input class="iput" type="password" name="pwd" placeholder="PASSWORD"><a href="https://www.baidu.com">忘记密码</a> <br>

				<input  class="but" type="button" value="Sign In" onclick="return check()">
				
			</form>
		</div>
	</div>

	<script type="text/javascript">
		window.history.replaceState(null, null, window.location.href);
		function check(){
			let passwordRegExp=/[a-zA-Z0-9_]{5,18}/
			let id = document.getElementsByName('id')[0]
			let pwd = document.getElementsByName('pwd')[0]
			let tips = document.getElementsByClassName("tips")[0]
			if(id.value=="" || null){ 
				tips.innerHTML = "账号不能为空" 
				return false
			}else if(id.value.length<5){
				tips.innerHTML = "账号或密码错误" 
				return false
			}
			
			if(pwd.value=="" || null){
				tips.innerHTML = "密码不能为空" 
				return false
			}else if(pwd.value.length<5){
				tips.innerHTML = "账号或密码错误" 
				return false
			}

			if(!passwordRegExp.test(id.value)){ 
				tips.innerHTML = "账号只能由数字、字母、下划线组成" 
				return false
			}else if(!passwordRegExp.test(pwd.value)){
				tips.innerHTML = "密码只能由数字、字母、下划线组成" 
				return false
			}

			if(id.value=="" && pwd.value==""){ 
				tips.innerHTML = "账号不能为空" 
				return true
			}
			else{
				tips.innerHTML = "账号或密码错误" 
				return false
			}

		}
	</script>
